<%include ./temp/header2%>
<form class="ui segment inverted three container form" action="/login" method="POST">
  <div class="field">
    <label>Name</label>
    <input type="text" name="data[name]" placeholder="UserName" required>
  </div>
  <div class="field">
    <label>Email</label>
    <input type="email" name="data[mail]" placeholder="Email" required>
  </div>
  <div class="field">
    <label>UserName</label>
    <input type="text" name="data[user]" placeholder="UserName" required>
  </div>
  <div class="field">
    <label>Password</label>
    <input type="password"  placeholder="Password" required>
  </div>
  <div class="field">
    <label>Repeat Password</label>
    <input type="password" name="data[pass]" placeholder="Repeat Password" required>
  </div>

  <div class="field">
    <div class="ui checkbox">
      <input type="checkbox" tabindex="0"  required>
      <label>I agree to the Terms and Conditions</label>
    </div>
  </div>
  <button class="ui button" type="submit">Submit</button>
</form>
<%include ./temp/footer%>
